<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">oracleproject</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.default_schema">oracleproject</property>
    <mapping resource="beans/Circuit.hbm.xml"/>
    <mapping resource="beans/Etape.hbm.xml"/>
    <mapping resource="beans/Client.hbm.xml"/>
    <mapping resource="beans/LieuAVisiter.hbm.xml"/>
    <mapping resource="beans/Reservation.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
